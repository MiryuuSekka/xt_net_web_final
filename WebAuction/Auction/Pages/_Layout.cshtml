@using Auction.Code;
@{
    Layout = null;

    var code = new Logic();
    var Lots = code.Code.GetLots();
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <nav class="navbar navbar-dark bg-success">
        <div>
            @if (Logic.CurrentUser.Role.ToString().Equals("Admin"))
            {
                <a class="btn btn-warning" href="~/Pages/Lot/Add.cshtml">Users managment</a>
            }
            @if (Logic.CurrentUser.Role.ToString().Equals("Seller"))
            {
                <a class="btn btn-success" href="~/Pages/Lot/Add.cshtml">Add Lot</a>
                <a class="btn btn-info" href="~/Pages/Lot/Add.cshtml">View Lot</a>
            }
        </div>
        <div class="form-inline my-2 my-lg-0">
            <input type="text" name="name" value="" />
            <button class="btn btn-dark">Search</button>
        </div>

        <div class="form-inline my-2 my-lg-0">
            <div style="margin-right:25px">
                <h5 class="text-dark">@Logic.CurrentUser.Role.ToString()</h5>
                <h4 class="text-white">@Logic.CurrentUser.Name</h4>
            </div>
            @if (Logic.CurrentUser.Role.ToString().Equals("Guest"))
            {
                <a class="btn btn-info" href="~/Pages/Autorisation/LogIn.cshtml">Log in</a>
                <a class="btn btn-danger" href="~/Pages/Autorisation/NewUser.cshtml">Create account</a>
            }
            else
            {
                <a class="btn btn-outline-dark" href="~/Pages/Autorisation/Logout.cshtml">Sign out</a>
            }
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
