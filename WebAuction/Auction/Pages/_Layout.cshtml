@using Entity;
@using Entity.Classes;
@{
    Layout = null;
    var user = new User();
    user.Role = Common.Role.Guest;
    var Avatar = @"https://pbs.twimg.com/profile_images/1232223608572956673/0ctlS7nc_400x400.jpg";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <nav class="navbar navbar-dark bg-success">
        <div class="form-inline my-2 my-lg-0">
            <input type="text" name="name" value="" />
            <button class="btn btn-dark">Search</button>
        </div>

        <div class="form-inline my-2 my-lg-0">
            @if (user.Role.ToString().Equals("Guest"))
            {
                <button class="btn btn-dark">Sign in</button>
                <button class="btn btn-dark">Create account</button>
            }
            else
            {
                <img src="@Avatar" alt="Avatar" style="height:50px; width:50px; border-radius:100%" />
                <button class="btn btn-dark">Sign out</button>
            }
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
