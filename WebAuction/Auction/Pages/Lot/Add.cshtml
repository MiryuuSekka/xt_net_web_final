@using Entity;
@using Entity.Classes;
@using Auction.Code;
@{
    Layout = "~/Pages/_LayoutClear.cshtml";

    var code = new Logic();
    var Lot = new Lot();
    Lot.Seller = Logic.CurrentUser;
    Lot.Product = new Product();
    

    //set names and status
    Lot.Product.Company = "";
    Lot.Product.Title = "";
    Lot.Product.Status = Common.Status.New;
    //choose photos
    Lot.Product.Photos = new List<Photo>();
    //select dates and price
    Lot.DateStart = DateTime.Now;
    Lot.DateEnd = DateTime.Now;
    Lot.Price = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title></title>
</head>
<body class="bg-dark">
    <section class="jumbotron" style="max-width:500px; margin:auto; padding:20px 30px;">
        <h3>Add new lot</h3>
        <div class="border-bottom border-dark">
            <h3>1/3</h3>
            <form action="/" method="post">

                <button class="btn bg-success">next ></button>
            </form>
        </div>
        <div class="border-bottom border-dark">
            <h3>2/3</h3>
            <form action="/" method="post">
                <div>
                    <p>Title</p>
                    <input type="text" name="name" value="" />
                </div>
                <div>
                    <p>Company</p>
                    <input type="text" name="name" value="" />
                </div>
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary active">
                        <input type="radio" name="options" id="option1" autocomplete="off" checked> @Common.Status.New
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="options" id="option2" autocomplete="off"> Radio
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="options" id="option3" autocomplete="off"> Radio
                    </label>
                    <label class="btn btn-secondary">
                        <input type="radio" name="options" id="option4" autocomplete="off"> Radio
                    </label>
                </div>
                <button class="btn bg-success">next ></button>
            </form>
        </div>
        <div class="border-bottom border-dark">
            <h3>3/3</h3>
            <form action="/" method="post">

                <button class="btn bg-success">next ></button>
            </form>
        </div>
        <a class="btn bg-dark" href="#">cancel</a>
    </section>

    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Code/Action.js"></script>
</body>
</html>
