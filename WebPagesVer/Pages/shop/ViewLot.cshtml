@using Entity;
@{ 
    Layout = "~/Pages/Layout.cshtml";

    var lotInfo = new Lot();
    lotInfo.Id = 1;
    lotInfo.DateStart = DateTime.Parse("11.03.2020");
    lotInfo.DateEnd = DateTime.Parse("12.03.2020");
    lotInfo.Price = 10;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Style/Style1.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div class="container">
        <div>
            <div>
                <p class="text-white">ITS INFO ABOUT PRODUCT</p>
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" 
                                 src="..." 
                                 alt="Первый слайд">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" 
                                 src="..." 
                                 alt="Второй слайд">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" 
                                 src="..." 
                                 alt="Третий слайд">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="border-bottom">
                <p class="text-dark">ITS INFO ABOUT LOT</p>
            </div>
        </div>
        @if (true)
        {
            <p class="text-dark"> ITS BET MENU FOR USER </p>
            <div class="input-group" style="min-width:200px; max-width:300px;">
                <div class="input-group-prepend">
                    <span class="input-group-text badge-light">$</span>
                </div>
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                <div class="input-group-append">
                    <span class="input-group-text badge-light">.00</span>
                </div>
                <div class="input-group-append">
                    <button class="btn btn-outline-light" type="button">Add bet</button>
                </div>
            </div>
        }
    </div>


    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Style/Script.js"></script>
</body>
</html>
